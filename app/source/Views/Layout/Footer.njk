<!-- 繼承 <html> 模板 -->
{% extends "Views/Include/HtmlLayout.njk" %}


<!-- 自訂 <title> 標題 -->
{% set title_text = "footer" %}





{% macro footer(img_url) %}
      {% set footerNavItems = [
        { text: '軍師幫' },
        { text: '專家專欄'},
        { text: '企業訓練'},
        { text: '用途分類合約'},
        { text: '產業分合約'},
        { text: '小律師書狀'},
        { text: '會員專區'},
        { text: '常見問答'},
        { text: '聯絡我們'},
        { text: '隱私權利'},
        { text: '網站條款'},
        { text: '會員權益'}]
    %}
                <div class="footer__top" style="background-image:url('{{img_url}}/footer_bg.png')"></div>
                <div class="footer__inner">
                <div class="footer__content">
                    <div class="footer__nav-list" >
                        <div class="footer__title">
                            <span class="text">關於我們</span>
                        </div>
                        {% for footerNavItem in footerNavItems.slice( 0, 3) %}
                            <div class="footer__item">
                                <span class="text">{{ footerNavItem.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="footer__nav-list" >
                        <div class="footer__title">
                            <span class="text">商品分類</span>
                        </div>
                        {% for footerNavItem2 in footerNavItems.slice( 3, 6) %}
                            <div class="footer__item">
                                <span class="text">{{ footerNavItem2.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="footer__nav-list" >
                        <div class="footer__title">
                            <span class="text">客戶服務</span>
                        </div>
                        {% for footerNavItem3 in footerNavItems.slice( 6, 9) %}
                            <div class="footer__item">
                                <span class="text">{{ footerNavItem3.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="footer__nav-list" >
                        <div class="footer__title">
                            <span class="text">相關政策</span>
                        </div>
                        {% for footerNavItem4 in footerNavItems.slice( 9, 12) %}
                            <div class="footer__item">
                                <span class="text">{{ footerNavItem4.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="footer__cpr"> 
                        <span class="text">© Copyright 2022 大律師知識金庫. All Rights Reserved.</span>
                    </div>
                </div>
                </div>
          
{% endmacro %}


{%- block Body %}
    <div class="footer">
        {{ footer() }}
    </div>
   
{% endblock -%}