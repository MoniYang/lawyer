<!-- 自訂 <title> 標題 -->
{% set title_text = "footer" %}
{% macro dropdown( open="false", btn_text , accent , type) %}
      <div class="dropdown" data-open="{{ open }}">
        <div class="dropdown__btn {% if accent=='true' %} dropdown__btn--accent{% endif %}">
            <span class="text">{{ btn_text }}</span>
            <i class="fa-sharp fa-solid fa-chevron-down"></i>
        </div>
        <div class="dropdown__content">
            {% if type =='menu' -%}
                {% for i in range(1, 6) -%}
                <a href="product_list.html" class="dropdown__item">
                    <span class="text">{{i}}我是選項</span>
                </a>
                {% endfor %}
            {% elif type =='page_nav' -%}
                <a href="#" class="dropdown__item">
                    <span class="text">我是選項</span>
                </a>
             {% endif %}
        </div>
    </div>
          
{% endmacro %}






