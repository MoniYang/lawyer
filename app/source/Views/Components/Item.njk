<!-- 自訂 <title> 標題 -->

{% macro item(img_url , href='#',type ) %}
    <a class="item" href="{{ href}}">
        <div class="item__content">
            <div class="item__img" style="background-image:url('{{img_url}}/item.jpg')"></div>

            <div class="item__text">
                <span class="text-title">和解契約書</span>
                {% if type !='free' %}
                <span class="text-line">NT$3,000</span>
                <span class="text">NT2,890</span>
                {% endif %}
            </div>
        </div>
    </a>
       
{% endmacro %}






