{% extends "Views/Include/HtmlLayout.njk" %}


<!-- 自訂 <title> 標題 -->
{% set title_text = "軍師幫" %}


<!-- 自訂站台 -->



<!-- 在 <body> 之內加入 -->
{%- block content %}
    {% set infos = {
        '商品介紹':'雙方於訴訟過程中達成和解，書立和解契約以資共同遵守。',
        '商品內容':'和解契約書1份',
        '購買須知':'◆結帳完成後之檔案請至會員「下載專區」點選下載。<br>
◆結帳完成商品之下載存檔期限為365日，過期將不再提供下載。<br>
◆本網站所販售商品為「非以有形媒介提供之數位內容或一經提供即為完成之線上服務」，故無消費者保護法所定「七日鑑賞期」之適用，一旦購買，即無法退款。'
        
    } %}
   <div class="product product--info">
        {{ side_nav(img_url=img_url, side_nav_title='industry', side_nav_type='prod',link='product_list.html')}}

        <div class="product__content">
            {{search()}}
            <div class="product__img">
                <img src="{{img_url}}/item.jpg" />
                <div class="share">
                    <span class="text">分類：<a href="#">解約和解</a>，<a href="#">不動產業</a></span>
                    <span class="text">分享:<a href="#">
                    <i class="fa-brands fa-line"></i></a>/<a href="#"><i class="fa-brands fa-facebook-messenger"></i></a></span>           
                </div>
            </div>
            
            <div class="product-info">
                <div class="product-info-title">
                    <span class="text">和解契約書</span>
                    <div class="product-info__price">
                        <div class="product-info__price-item">
                            <span class="text-prev">原&nbsp;&nbsp;&nbsp;&nbsp;價: </span><span class="text-price">NT$.3000</span>
                        </div>
                        <div class="product-info__price-item">
                            <span class="text-prev">優惠價:</span><span class="text-price"> NT$.666</span>
                        </div>
                    </div>
                </div>
                <div class="product-info__detail-content">
                    {% for title , text in infos %}
                    <div class="product-info__detail">
                        <span class="title">{{ title }}</span>
                        <span class="text">{{ text | safe }}</span>
                    </div>
                    {% endfor %}
                </div>
                <div class="btn-group">
                    <a href="cart.html" class="btn btn--add">加入購物車</a>
                    <a href="cart.html" class="btn btn--add">立刻購買</a>
                </div>
                {{ btn( link='industry_list.html',text='返回列表頁', icon='fa-arrow-left' , type='back' ) }}
            </div>

            <div class="product-info__content">
              
            </div>
        </div>
   </div>

   <div class="promotion promotion--prod">
        <span class="title">購買此商品的人也有興趣…</span>
        {%- for i in range(1,5) %}
            <a class="promotion-item" href="#">
                <img src="{{img_url}}/item.jpg">
                 <div class="promotion-item__text-group">
                    <span class="text-title">和解契約書{{i}}</span>
                    <span class="text-line">NT$3,000</span>
                    <span class="text">NT$2,890</span>
                </div>
            </a>
           
     {%- endfor %}         
   </div>          
 
{% endblock -%}