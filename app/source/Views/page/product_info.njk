{% extends "Views/Include/HtmlLayout.njk" %}


<!-- 自訂 <title> 標題 -->
{% set title_text = "軍師幫" %}


<!-- 自訂站台 -->



<!-- 在 <body> 之內加入 -->
{%- block content %}
    {% set infos = {
        '課程介紹':'你看膩坊間厚厚的談判專書了嗎？動輒數十條的談判心法，談判桌上火光電石間你背得起來？用得出來嗎？
特聘身經百戰的商務律師親自主講的稀世「壓箱寶」將一次絕密大公開！精準地為你打通任督二脈，不需要死背繁雜眾多的談判術，學會爭端談判，讓你「無所不談」又「無往不利」！
你將成為最受歡迎的談判者，連對手都樂於指定跟你談！',
        '課程時數':'3 Hour',
        '適合族群':'◆業務、採購<br>◆想當意見領袖者<br>◆對此議題有興趣者'
        
    } %}
   <div class="product product--info">
        {{ side_nav(img_url=img_url, side_nav_title='prod2', side_nav_type='prod_info')}}

        <div class="product__content">
            {{search()}}
            <div class="product-swiper">
                <div class="swiper product-info-swiper" style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff">
                    <div class="swiper-wrapper">
                    {% set imgs = [ 'prod_1','prod_2','prod_3','prod_4'] %}
                    {% for img in imgs -%}
                        <div class="swiper-slide">
                            <img src="{{img_url}}/prod/{{ img }}.png" />
                        </div>
                    {% endfor %}
                    </div>
                    {# <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div> #}
                    </div>
                    <div thumbsSlider="" class="swiper product-info-swiper-btns">
                        <div class="swiper-wrapper">
                        {% for img in imgs -%}
                            <div class="swiper-slide">
                                <img src="{{img_url}}/prod/{{ img }}.png" />
                            </div>
                        {% endfor %}
                        </div>
                    </div>
            </div>

            <div class="product-info">
                <div class="product-info-title">CLASS-【爭端談判學】</div>
                <div class="product-info__detail-content">
                    {% for title , text in infos %}
                    <div class="product-info__detail">
                        <span class="title">{{ title }}</span>
                        <span class="text">{{ text | safe }}</span>
                    </div>
                    {% endfor %}
                </div>
                <button class="btn btn--add">點我諮詢</button>
            </div>

            <div class="product-info__content">
               <div class="video-container">
                                <iframe width="100%" height="350" src="https://www.youtube.com/embed/fdk9ARVvhEQ" ></iframe>
                            </div>
            </div>
        </div>
   </div>

   <div class="promotion promotion--prod">
        <span class="title">購買此商品的人也有興趣…</span>
        {%- for i in range(1,5) %}
            <div class="promotion-item">
                <img src="{{img_url}}/item.jpg">
                 <div class="promotion-item__text-group">
                    <span class="text-title">和解契約書{{i}}</span>
                    <span class="text-line">NT$3,000</span>
                    <span class="text">NT$2,890</span>
                </div>
            </div>
           
     {%- endfor %}         
   </div>          
 
{% endblock -%}