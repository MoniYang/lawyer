<!-- 繼承 <html> 模板 -->
{# {% extends "Views/Include/HtmlLayout.njk" %} #}


<!-- 自訂 <title> 標題 -->

{% macro member(img_url) %}
    <div class="title">
     
        <img src="{{img_url}}/text/member.png">
 
    </div>
    {% set memberItems = [
        {   title_text:'⼀般會員', 
            cost:'註冊免費', 
            list1:'每月法律法向球（電子報）',
            list2:'',
            bg:'member_1.png',
            cart_text:'立即註冊'
            },
        { 
            title_text:'黃⾦會員', 
            cost:'1296', 
            list1:'每月法律法向球（電子報）',
            list2:'每月可下載2份專業合約',
            bg:'member_2.jpg',
            cart_text:'立即購買'
        },
        { 
            title_text:'鑽石會員', 
            cost:'3000',
            list1:'每月法律法向球（電子報）',
            list2:'每月可下載5份專業合約',
            bg:'member_3.jpg',
            cart_text:'立即購買'
        }
    ] %}
        <div class="member">
        <div class="member__content">
           
            <div class="member__list">
                
                <a href="#" class="member__item" style="background-image:url('{{img_url}}/member/{{ memberItems[0].bg }}')">
                    <div class="member__inner">
                        <div class="member__title">{{ memberItems[0].title_text }}</div>
                        <div class="member__cost">{{ memberItems[0].cost }}</div>
                        <div class="member__detail">
                            <span class="text">{{ memberItems[0].list1 }}</span>
                        </div>
                        <button class="btn btn--cart">
                            <i class="fa-solid fa-cart-plus"></i>
                            <span class="text">{{memberItems[0].cart_text }}</span>
                        </button>
                    </div>
                    
                </a>
                {% for memberItem in memberItems.slice(1, 3) -%}
                <a href="#" class="member__item" style="background-image:url('{{img_url}}/member/{{ memberItem.bg }}')">
                    <div class="member__inner">
                        <div class="member__title">{{ memberItem.title_text }}</div>
                        <div class="member__cost"><span class="text-cost">NT.</span>{{ memberItem.cost }}<span class="text-cost">/年</span></div>
                        <div class="member__detail">
                            <span class="text">{{ memberItem.list1 }}</span>
                            <span class="text">{{ memberItem.list2 }}</span>
                        </div>
                        <button class="btn btn--cart">
                            <i class="fa-solid fa-cart-plus"></i>
                            <span class="text">{{ memberItem.cart_text }}</span>
                        </button>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}






{%- block Body %}
  
   
{% endblock -%}