<body>    
    <div class="app">
        
        {%- block Body %}
  
        

             <div class="header">
                <div class="header__main">
                    <div class="logo">
                        <a href="index.html">
                            <img src="{{img_url}}/logo.png">
                        </a>
                        <a href="about.html">
                            <img src="{{img_url}}/logo_text.png">
                        </a>
                    </div>
                    <div class="header__nav" role="desktop-visible">
                        <div class="header__nav-item">
                            <div class="header__top" style="background-image:url('{{img_url}}/menu/menu_top-1.png');">
                            </div>
                            <div class="header__nav-group">
