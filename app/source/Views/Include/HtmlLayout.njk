                        </div>
                        <div class="header__nav-item">
                            <div class="header__top" style="background-image:url('{{img_url}}/menu/menu_top-3.png');">
                            </div>
                            {{ dropdown (btn_text="企業訓練", type="menu" )}}
                        </div>
                        <div class="header__nav-item">
                            <div class="header__top" style="background-image:url('{{img_url}}/menu/menu_top-4.png');">
                            </div>
                            {{ dropdown ( btn_text="專家專欄", type="menu", accent='true' )}}
                        </div>
                        <div class="header__nav-item">
                            <div class="header__top" style="background-image:url('{{img_url}}/menu/menu_top-5.png');">
                            </div>
                            {{ dropdown ( btn_text="常見問題" , type="menu" )}}
                        </div>
                        <div class="header__nav-item">
                            <div class="header__top" style="background-image:url('{{img_url}}/menu/menu_top-6.png');">
                            </div>
                            {{ dropdown (  btn_text="會員專區",  type="menu", accent='true' )}}
                        </div>
                    </div>
                    <div class="header__nav" role="mobile-visible" data-open="false">
                        <button class="btn btn--clear">
                            <i class="fa-solid fa-xmark"></i>
                        </button>
                        <div class="dropdown-group">
                            <span class="dropdown-text">大律師合約系列</span>
                            {{ dropdown ( btn_text="依用途分類", type="menu", open="false" )}}
                        </div>
                        <div class="dropdown-group">
                 
                           {{ dropdown ( btn_text="依產業分類", type="menu" )}}
                        </div>
                        <div class="dropdown-group">
                   
                            {{ dropdown ( btn_text="免費專區", type="menu" )}}
                        </div>  
                        <div class="dropdown-group">
                            <span class="dropdown-text">小律師書狀系列</span>
                            {{ dropdown ( btn_text="各類書狀", type="menu" )}}
                        </div>
                        <div class="dropdown-group">
                            <span class="dropdown-text">CLASS</span>
                            {{ dropdown (btn_text="企業訓練" , type="menu" )}}
                        </div>
                        <div class="dropdown-group">
                            <span class="dropdown-text">ADVISER</span>
                            {{ dropdown ( btn_text="專家專欄" , type="menu" )}}
                        </div>
                        <div class="dropdown-group">
                            <span class="dropdown-text">FAQs</span>
                            {{ dropdown ( btn_text="常見問題", type="menu" )}}
                        </div>
                        <div class="dropdown-group">
                            <span class="dropdown-text">MEMBER</span>
                            {{ dropdown (  btn_text="會員專區" , type="menu" )}}
                        </div>
                    </div>
                    <button class="btn btn--cart" onclick="location.href='cart.html '">
                        <span class="badge">1</span>
                        <i class="fa-solid fa-cart-shopping"></i>
                    </button>
                    <button class="btn btn--nav" >
                        <i class="fa-solid fa-bars"></i>
                    </button>
                </div>
            </div> 
            {# {%- block Header %}{{ Header( img_url=img_url , platform=platform ,site_name=site_name ,lang=html_lang) }}{% endblock -%} #}
            <div class="preface" style="background-image:url('{{img_url}}/bg.jpg')">
                <div class="preface__content">
                    <div class="preface__logo">
                        <img src="{{img_url}}/logo.png">
